<Window x:Class="DPFP_CaptureExample_ChatGPT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DPFP_CaptureExample_ChatGPT"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="{Binding Status}" FontWeight="Bold" Margin="0 0 0 10"/>

            <Image Source="{Binding FingerprintImage}" Width="200" Height="200" Stretch="Uniform"/>

            <TextBox Text="{Binding Report}" Height="100" Margin="0 10 0 0" 
                     TextWrapping="Wrap" IsReadOnly="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0" >
                <Button Content="Iniciar" Command="{Binding StartCommand}" Width="100" Margin="5"/>
                <Button Content="Detener" Command="{Binding StopCommand}" Width="100" Margin="5"/>
            </StackPanel>

            
        </StackPanel>
    </Grid>
</Window>
